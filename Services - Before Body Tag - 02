// 2. FUNCIONALIDAD PRINCIPAL
document.addEventListener('DOMContentLoaded', function() {
    // Seleccionar elementos clave
    const botonesServicio = document.querySelectorAll('.boton-servicio');
    const contenedorInfo = document.querySelector('.container-servicio-informacion');
    
    // Función para actualizar contenido
    const actualizarContenido = (servicioNombre) => {
        const data = serviciosData[servicioNombre];
        
        // Actualizar título y descripción
        contenedorInfo.querySelector('.heading-info-servicio').textContent = data.titulo;
        contenedorInfo.querySelector('.paragraph-6').innerHTML = data.descripcion;
        
        // Actualizar lista de items
        const lista = contenedorInfo.querySelector('.list');
        lista.innerHTML = data.items.map(item => `
            <li class="list-item-services">${item.titulo}</li>
        `).join('');
        
        // Manejar clic en items de lista
        lista.querySelectorAll('li').forEach((item, index) => {
            item.addEventListener('click', () => {
                // Remover activo de otros items
                lista.querySelectorAll('li').forEach(li => li.classList.remove('active'));
                
                // Marcar item como activo
                item.classList.add('active');
                
                // Actualizar detalle
                contenedorInfo.querySelector('.paragraph-7').innerHTML = data.items[index].detalle;
            });
        });
        
        // Activar primer item por defecto
        lista.querySelector('li')?.click();
    };

    // Manejar clic en botones de servicio
    botonesServicio.forEach(boton => {
        boton.addEventListener('click', () => {
            // Remover activo de otros botones
            botonesServicio.forEach(b => b.classList.remove('active'));
            
            // Marcar botón actual como activo
            boton.classList.add('active');
            
            // Obtener nombre del servicio
            const servicioNombre = boton.querySelector('.titulo-boton-servicio').textContent.trim();
            
            // Actualizar contenido
            actualizarContenido(servicioNombre);
        });
    });

    // Navegación Anterior/Siguiente
    document.querySelector('.boton-servicio.anterior').addEventListener('click', function(e) {
        e.preventDefault();
        const servicios = Array.from(botonesServicio).map(b => b.querySelector('.titulo-boton-servicio').textContent.trim());
        const indexActual = servicios.findIndex(s => s === document.querySelector('.boton-servicio.active .titulo-boton-servicio').textContent.trim());
        const nuevoIndex = (indexActual - 1 + servicios.length) % servicios.length;
        botonesServicio[nuevoIndex].click();
    });

    document.querySelector('.boton-servicio.siguiente').addEventListener('click', function(e) {
        e.preventDefault();
        const servicios = Array.from(botonesServicio).map(b => b.querySelector('.titulo-boton-servicio').textContent.trim());
        const indexActual = servicios.findIndex(s => s === document.querySelector('.boton-servicio.active .titulo-boton-servicio').textContent.trim());
        const nuevoIndex = (indexActual + 1) % servicios.length;
        botonesServicio[nuevoIndex].click();
    });

    // Estado inicial: Activar primer servicio
    botonesServicio[0].click();
});

// 3. ESTILOS DE INTERACCIÓN
const estiloInteractivo = document.createElement('style');
estiloInteractivo.textContent = `
    .boton-servicio.active {
